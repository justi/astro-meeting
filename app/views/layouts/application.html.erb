<!DOCTYPE html>
<html>
  <head>
    <title>Zloty astro</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<div class="container">
				<a class="navbar-brand" href="/">Mapa spotka≈Ñ astronomicznych</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav mr-auto">
						<% if user_signed_in? %>
							<li "nav-item active">
								<%= link_to (t 'devise.sessions.destroy'), destroy_user_session_path, method: :delete, class: "nav-link" %>
							</li>
						<% else %>
							<li "nav-item active">
								<%= link_to (t 'devise.sessions.new.sign_in'), new_user_session_path, class: "nav-link" %>  
							</li>
						<% end %>
					</ul>
				</div>
			</div>
		</nav>
    <div class="container mt-5">
			<% flash.each do |type, msg| %>
				<div class="alert alert-info">
					<%= msg %>
				</div>
			<% end %>
  		<%= yield %>
		</div>
		<footer>
		</footer>
		<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
  </body>
</html>
